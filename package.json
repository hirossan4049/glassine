{
  "name": "glassine",
  "version": "0.1.0",
  "description": "Login-free schedule coordination tool built on Cloudflare infrastructure",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run dev:client & wrangler pages dev --proxy 5173 --d1=DB --persist-to=.wrangler/state",
    "dev:client": "vite --host",
    "dev:wrangler": "npm run build && wrangler pages dev dist --d1=DB --persist-to=.wrangler/state",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "oxlint",
    "deploy": "wrangler pages deploy dist",
    "db:init": "wrangler d1 execute glassine-db --local --file=schema/schema.sql",
    "db:init:remote": "wrangler d1 execute glassine-db --remote --file=schema/schema.sql"
  },
  "dependencies": {
    "@carbon/react": "^1.64.0",
    "@carbon/styles": "^1.99.0",
    "@cf-wasm/resvg": "^0.3.3",
    "hono": "^4.6.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "oxlint": "^0.12.0",
    "sass": "^1.97.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "wrangler": "^4.61.1"
  }
}
