{
  "name": "glassine",
  "version": "0.1.0",
  "description": "Login-free schedule coordination tool built on Cloudflare infrastructure",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build && wrangler pages dev dist --d1=DB --persist-to=.wrangler/state --compatibility-date=2024-01-01",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "oxlint",
    "deploy": "wrangler pages deploy dist",
    "db:init": "for f in .wrangler/state/v3/d1/miniflare-D1DatabaseObject/*.sqlite; do sqlite3 \"$f\" < schema/schema.sql 2>/dev/null; done; echo 'DB initialized'",
    "db:init:remote": "wrangler d1 execute glassine-db --remote --file=schema/schema.sql",
    "wrangler:dev": "wrangler pages dev dist --d1=DB --persist-to=.wrangler/state --compatibility-date=2024-01-01",
    "wrangler:deploy": "wrangler pages deploy dist"
  },
  "dependencies": {
    "@carbon/react": "^1.64.0",
    "@carbon/styles": "^1.99.0",
    "@cf-wasm/resvg": "^0.3.3",
    "hono": "^4.6.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "oxlint": "^0.12.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "wrangler": "^4.61.1"
  }
}
