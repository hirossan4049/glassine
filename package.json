{
  "name": "glassine",
  "version": "0.1.0",
  "description": "Login-free schedule coordination tool built on Cloudflare infrastructure",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler pages deploy dist",
    "test": "playwright test",
    "test:e2e": "playwright test",
    "e2e:docs": "node scripts/e2e-docs.js",
    "test:types": "tsc --noEmit",
    "lint": "oxlint",
    "local:db": "wrangler d1 execute glassine-db --local --file=schema/schema.sql",
    "remote:db": "wrangler d1 execute glassine-db --remote --file=schema/schema.sql"
  },
  "dependencies": {
    "@carbon/react": "^1.100.0",
    "@carbon/styles": "^1.99.0",
    "@cf-wasm/resvg": "^0.3.3",
    "hono": "^4.11.7",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260203.0",
    "@playwright/test": "^1.58.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "ffmpeg-static": "^5.3.0",
    "oxlint": "^1.43.0",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wrangler": "^4.62.0"
  }
}
